<section class="py-24 relative overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 bg-gradient-to-b from-slate-900 to-slate-950"></div>
  <div class="absolute inset-0 bg-[url('/images/grid.svg')] bg-center opacity-10"></div>

  <!-- Gradient orbs -->
  <div class="absolute bottom-0 left-1/3 w-96 h-96 bg-blue-500/10 rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 right-1/3 w-80 h-80 bg-violet-500/10 rounded-full blur-3xl"></div>

  <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-6">
      Ready to code with AI?
    </h2>
    <p class="text-xl text-slate-400 mb-10 max-w-2xl mx-auto">
      Deploy CodeVault in minutes and start using AI-powered code completion with your entire team.
      Your code stays private, always.
    </p>

    <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
      <a href="/docs/getting-started" class="btn btn-primary text-lg px-8 py-4 w-full sm:w-auto">
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
        </svg>
        Get Started Free
      </a>
      <a href="/contact" class="btn btn-secondary text-lg px-8 py-4 w-full sm:w-auto">
        Talk to Sales
      </a>
    </div>

    <!-- Trust badges -->
    <div class="mt-16 pt-16 border-t border-slate-800">
      <p class="text-sm text-slate-500 mb-6">Trusted by developers at</p>
      <div class="flex flex-wrap items-center justify-center gap-8 opacity-50">
        <!-- Placeholder logos - replace with real ones -->
        <div class="text-slate-400 font-semibold text-lg">TechCorp</div>
        <div class="text-slate-400 font-semibold text-lg">DevStudio</div>
        <div class="text-slate-400 font-semibold text-lg">CodeLabs</div>
        <div class="text-slate-400 font-semibold text-lg">InnoTech</div>
      </div>
    </div>
  </div>
</section>
