---
---

<section class="relative overflow-hidden">
  <!-- Background gradient -->
  <div class="absolute inset-0 bg-gradient-to-b from-slate-900 via-slate-900 to-slate-950"></div>

  <!-- Gradient orbs -->
  <div class="absolute top-0 left-1/4 w-96 h-96 bg-blue-500/20 rounded-full blur-3xl"></div>
  <div class="absolute top-20 right-1/4 w-80 h-80 bg-violet-500/20 rounded-full blur-3xl"></div>

  <!-- Grid pattern -->
  <div class="absolute inset-0 bg-[url('/images/grid.svg')] bg-center opacity-20"></div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 sm:py-32 lg:py-40">
    <div class="text-center max-w-4xl mx-auto">
      <!-- Badge -->
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-slate-800/50 border border-slate-700 mb-8">
        <span class="relative flex h-2 w-2">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"></span>
        </span>
        <span class="text-sm text-slate-300">Self-hosted &middot; 100% private</span>
      </div>

      <!-- Headline -->
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight mb-6">
        <span class="text-white">Your own</span>
        <span class="gradient-text"> AI Coding Assistant</span>
      </h1>

      <!-- Subheadline -->
      <p class="text-xl sm:text-2xl text-slate-400 max-w-2xl mx-auto mb-10 leading-relaxed">
        GPU-accelerated code completion and chat. Deploy on your infrastructure.
        <span class="text-white font-medium">Your code never leaves your servers.</span>
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-16">
        <a href="/docs/getting-started" class="btn btn-primary text-lg px-8 py-4 w-full sm:w-auto">
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
          Get Started Free
        </a>
        <a href="https://github.com/YannBrrd/CodeVault" target="_blank" rel="noopener noreferrer" class="btn btn-secondary text-lg px-8 py-4 w-full sm:w-auto">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
          </svg>
          View on GitHub
        </a>
      </div>

      <!-- Code snippet preview -->
      <div class="relative max-w-3xl mx-auto">
        <div class="absolute -inset-1 bg-gradient-to-r from-blue-500 to-violet-500 rounded-xl blur-sm opacity-50"></div>
        <div class="relative bg-slate-900 rounded-xl border border-slate-700 overflow-hidden">
          <!-- Terminal header -->
          <div class="flex items-center gap-2 px-4 py-3 bg-slate-800/50 border-b border-slate-700">
            <div class="w-3 h-3 rounded-full bg-red-500"></div>
            <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
            <div class="w-3 h-3 rounded-full bg-green-500"></div>
            <span class="ml-2 text-sm text-slate-400">Terminal</span>
          </div>
          <!-- Terminal content -->
          <div class="p-6 font-mono text-sm text-left">
            <div class="text-slate-400"># Install in seconds</div>
            <div class="mt-2">
              <span class="text-green-400">$</span>
              <span class="text-white"> git clone https://github.com/YannBrrd/CodeVault</span>
            </div>
            <div class="mt-1">
              <span class="text-green-400">$</span>
              <span class="text-white"> cd CodeVault && ./install.sh</span>
            </div>
            <div class="mt-4 text-slate-400"># Configure your IDE</div>
            <div class="mt-2">
              <span class="text-blue-400">API Base:</span>
              <span class="text-white"> http://your-server/v1</span>
            </div>
            <div class="mt-1">
              <span class="text-blue-400">Model:</span>
              <span class="text-white"> qwen2.5-coder:7b</span>
            </div>
            <div class="mt-4 text-green-400">Ready to code with AI assistance!</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
