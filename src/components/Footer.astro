---
const base = import.meta.env.BASE_URL;

const footerLinks = {
  product: [
    { href: `${base}features`, label: 'Features' },
    { href: `${base}pricing`, label: 'Pricing' },
    { href: `${base}docs`, label: 'Documentation' },
    { href: `${base}blog`, label: 'Blog' },
  ],
  resources: [
    { href: `${base}docs/getting-started`, label: 'Getting Started' },
    { href: `${base}docs/api`, label: 'API Reference' },
    { href: `${base}docs/ide-integration`, label: 'IDE Integration' },
  ],
  company: [
    { href: `${base}contact`, label: 'Contact' },
    { href: `${base}privacy`, label: 'Privacy Policy' },
    { href: `${base}terms`, label: 'Terms of Service' },
  ],
};

const currentYear = new Date().getFullYear();
---

<footer class="border-t border-slate-800 bg-slate-900/50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
      <!-- Brand -->
      <div class="col-span-2 md:col-span-1">
        <a href={base} class="flex items-center gap-2 mb-4">
          <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-blue-500 to-violet-500 flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
            </svg>
          </div>
          <span class="text-xl font-bold text-white">CodeVault</span>
        </a>
        <p class="text-slate-400 text-sm leading-relaxed">
          Self-hosted AI coding assistant. Your code stays on your servers.
        </p>
      </div>

      <!-- Product Links -->
      <div>
        <h3 class="text-sm font-semibold text-white uppercase tracking-wider mb-4">
          Product
        </h3>
        <ul class="space-y-2">
          {footerLinks.product.map(link => (
            <li>
              <a
                href={link.href}
                class="text-slate-400 hover:text-white text-sm transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Resources Links -->
      <div>
        <h3 class="text-sm font-semibold text-white uppercase tracking-wider mb-4">
          Resources
        </h3>
        <ul class="space-y-2">
          {footerLinks.resources.map(link => (
            <li>
              <a
                href={link.href}
                target={link.external ? '_blank' : undefined}
                rel={link.external ? 'noopener noreferrer' : undefined}
                class="text-slate-400 hover:text-white text-sm transition-colors inline-flex items-center gap-1"
              >
                {link.label}
                {link.external && (
                  <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                )}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company Links -->
      <div>
        <h3 class="text-sm font-semibold text-white uppercase tracking-wider mb-4">
          Company
        </h3>
        <ul class="space-y-2">
          {footerLinks.company.map(link => (
            <li>
              <a
                href={link.href}
                class="text-slate-400 hover:text-white text-sm transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-12 pt-8 border-t border-slate-800 flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-slate-400 text-sm">
        &copy; {currentYear} Yann Barraud. All rights reserved.
      </p>
    </div>
  </div>
</footer>
