---
const base = import.meta.env.BASE_URL;

const navLinks = [
  { href: `${base}features`, label: 'Features' },
  { href: `${base}pricing`, label: 'Pricing' },
  { href: `${base}docs`, label: 'Docs' },
  { href: `${base}blog`, label: 'Blog' },
];

const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50 glass">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href={base} class="flex items-center gap-2 group">
        <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-blue-500 to-violet-500 flex items-center justify-center">
          <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
          </svg>
        </div>
        <span class="text-xl font-bold text-white group-hover:text-blue-400 transition-colors">
          CodeVault
        </span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-1">
        {navLinks.map(link => (
          <a
            href={link.href}
            class:list={[
              "px-4 py-2 rounded-lg text-sm font-medium transition-colors",
              currentPath.startsWith(link.href)
                ? "text-white bg-white/10"
                : "text-slate-300 hover:text-white hover:bg-white/5"
            ]}
          >
            {link.label}
          </a>
        ))}
      </div>

      <!-- CTA Button -->
      <div class="hidden md:flex items-center">
        <a href={`${base}contact`} class="btn btn-primary text-sm">
          Contact Us
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        type="button"
        class="md:hidden p-2 rounded-lg text-slate-300 hover:text-white hover:bg-white/10 transition-colors"
        aria-label="Toggle menu"
        id="mobile-menu-button"
      >
        <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div class="hidden md:hidden pb-4" id="mobile-menu">
      <div class="flex flex-col gap-1 pt-2 border-t border-white/10">
        {navLinks.map(link => (
          <a
            href={link.href}
            class:list={[
              "px-4 py-2 rounded-lg text-sm font-medium transition-colors",
              currentPath.startsWith(link.href)
                ? "text-white bg-white/10"
                : "text-slate-300 hover:text-white hover:bg-white/5"
            ]}
          >
            {link.label}
          </a>
        ))}
        <div class="mt-4 pt-4 border-t border-white/10">
          <a href={`${base}contact`} class="btn btn-primary text-sm justify-center w-full">
            Contact Us
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<!-- Spacer for fixed header -->
<div class="h-16"></div>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
