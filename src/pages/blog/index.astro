---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const formatDate = (date: Date) => new Intl.DateTimeFormat('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
}).format(date);
---

<BaseLayout title="Blog" description="Latest news, updates, and tutorials from the CodeVault team.">
  <section class="py-24 bg-gradient-to-b from-slate-900 to-slate-950">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl font-bold text-white mb-4">Blog</h1>
      <p class="text-lg text-slate-400 mb-12">
        Latest news, updates, and tutorials from the CodeVault team.
      </p>

      <div class="space-y-8">
        {posts.map(post => (
          <article class="card group">
            <a href={`/blog/${post.slug}`} class="block">
              <div class="flex items-center gap-2 text-sm text-slate-500 mb-3">
                <time datetime={post.data.pubDate.toISOString()}>
                  {formatDate(post.data.pubDate)}
                </time>
                {post.data.author && (
                  <>
                    <span>&middot;</span>
                    <span>{post.data.author}</span>
                  </>
                )}
              </div>
              <h2 class="text-xl font-semibold text-white group-hover:text-blue-400 transition-colors mb-2">
                {post.data.title}
              </h2>
              {post.data.description && (
                <p class="text-slate-400">{post.data.description}</p>
              )}
              {post.data.tags && (
                <div class="flex flex-wrap gap-2 mt-4">
                  {post.data.tags.map(tag => (
                    <span class="px-2 py-1 text-xs rounded-full bg-slate-800 text-slate-400">
                      {tag}
                    </span>
                  ))}
                </div>
              )}
            </a>
          </article>
        ))}
      </div>

      {posts.length === 0 && (
        <p class="text-slate-400 text-center py-12">
          No blog posts yet. Check back soon!
        </p>
      )}
    </div>
  </section>
</BaseLayout>
