---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  pubDate?: Date;
  author?: string;
  image?: string;
}

const { title, description, pubDate, author = 'CodeVault Team', image } = Astro.props;

const formattedDate = pubDate ? new Intl.DateTimeFormat('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
}).format(pubDate) : null;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | CodeVault Blog</title>
    <meta name="description" content={description || title} />

    <!-- Open Graph -->
    <meta property="og:type" content="article" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description || title} />
    {image && <meta property="og:image" content={image} />}
  </head>
  <body class="min-h-screen flex flex-col">
    <Header />

    <main class="flex-1 py-16">
      <article class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <header class="mb-12 text-center">
          <div class="flex items-center justify-center gap-2 text-sm text-slate-400 mb-4">
            {formattedDate && <time datetime={pubDate?.toISOString()}>{formattedDate}</time>}
            {formattedDate && author && <span>&middot;</span>}
            {author && <span>{author}</span>}
          </div>
          <h1 class="text-4xl sm:text-5xl font-bold text-white mb-6">{title}</h1>
          {description && (
            <p class="text-xl text-slate-400">{description}</p>
          )}
        </header>

        <!-- Featured image -->
        {image && (
          <div class="mb-12 rounded-2xl overflow-hidden">
            <img src={image} alt={title} class="w-full" />
          </div>
        )}

        <!-- Content -->
        <div class="prose prose-slate prose-invert prose-lg max-w-none">
          <slot />
        </div>

        <!-- Author bio -->
        <div class="mt-16 pt-8 border-t border-slate-800">
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 rounded-full bg-gradient-to-br from-blue-500 to-violet-500 flex items-center justify-center">
              <span class="text-white font-bold">CV</span>
            </div>
            <div>
              <div class="font-medium text-white">{author}</div>
              <div class="text-sm text-slate-400">CodeVault Team</div>
            </div>
          </div>
        </div>
      </article>
    </main>

    <Footer />
  </body>
</html>
